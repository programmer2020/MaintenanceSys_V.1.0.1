@model maintenanceApplication.ViewModels.MaintenanceCreteViewModel

@{
    ViewBag.Title = "MaintenanceTechnicalReport";
}

<div class="col-md-12">
<div class="col-md-3"></div>
<div class="col-md-9">

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MaintenanceTechnicalReport</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.maintenance.Id)


        <div class="form-group">
            @Html.LabelFor(model => model.maintenance.TechnicalReport, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.TextAreaFor(model => model.maintenance.TechnicalReport, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.maintenance.TechnicalReport, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.maintenance.Planned_Repair_Date, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.maintenance.Planned_Repair_Date, new { type = "datetime-local" })

                @*@Html.EditorFor(model => model.maintenance.Planned_Repair_Date, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.maintenance.Planned_Repair_Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.maintenance.Actual_Repair_Date, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @*@Html.EditorFor(model => model.maintenance.Actual_Repair_Date, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.TextBoxFor(model => model.maintenance.Actual_Repair_Date, new { type = "datetime-local" })

                @Html.ValidationMessageFor(model => model.maintenance.Actual_Repair_Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left:23%;margin-top:50px;">
            <input type="submit" class="btn btn-primary" formaction="/Maintenance/Maintenance_Technical_Report_Done/@ViewData["mainId"]" value="Save Technical Report"
                   formmethod="post" />
            <input type="submit" class="btn btn-danger" formaction="/Maintenance/Maintenance_Technical_Report_Return/@ViewData["mainId"]" value="Can't Fix The Device"
                   formmethod="post" />

            <a href="/Maintenance/GetNewMaintenanceRequests" class="btn btn-warning form-group" style="margin-left:1%;">Cancel</a>
        </div>
        
        </div>
        }

        

    </div>

</div>