@model IEnumerable<maintenanceApplication.Models.Maintenance.MaintenanceModel>

@{
    ViewBag.Title = "GetAllDelivredMaintenanceRequestView";
}
@{
    Layout = null;
}

    <div class="row">
        <div class="col-md-12">
            <div class="tab-pane active" id="1b">
                <div class="tab-pane active" id="1b">
                    <table class="display" id="delivred">
                        <thead>
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreationDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Device_SerialNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Device_Model)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Customer_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Customer_Phone_1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Customer_Phone_1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.priority.PriorityName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.status.StatusName)
                                </th>

                                <th>
                                    Repeated
                                </th>

                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreationDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Device_SerialNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Device_Model)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Customer_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Customer_Phone_1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Customer_Phone_2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.priority.PriorityName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.status.StatusName)
                                </td>


                                @if (item.isRepeated == true)
                                {
                                    <td>
                                        <div style="background:#ff0000;width:30px;height:30px;border-radius:30px;margin-left:30%;"></div>
                                    </td>
                                }
                                else
                                {
                                    <td></td>
                                }

                                <td>
                                    @Html.ActionLink("Actions", "Maintennace_Delivred_Action", new { id = item.Id })
                                    @*|@Html.ActionLink("Details", "getMaintenanceDetails", new { id = item.Id })*@
                                </td>
                            </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#delivred').DataTable();
        var table = $('#delivred').DataTable();
    });


</script>
