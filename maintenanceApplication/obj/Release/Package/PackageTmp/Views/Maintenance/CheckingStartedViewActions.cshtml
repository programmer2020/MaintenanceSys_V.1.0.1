@model maintenanceApplication.ViewModels.MaintenanceCreteViewModel

@{
    ViewBag.Title = "underCheckViewActions";
}

<div class="col-md-3"></div>

<div class="col-md-9" style="margin-left:20%;">
    @using (Html.BeginForm("CreateNewMaintenanceRequest", "Maintenance"))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Maintenance Request</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-md-12" style="margin: 10px 0 20px 0">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <p class="text-center text-primary font-weight-bold font-20" style="margin-bottom:20px;">Customer Details</p>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Customer Name</th>
                            <th scope="col">Customer Phone 1</th>
                            <th scope="col">Customer Phone 2</th>
                            @*<th scope="col">City</th>*@
                            <th scope="col">Customer Adress</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.maintenance.Customer_Name</td>
                            <td>@Model.maintenance.Customer_Phone_1</td>
                            <td>@Model.maintenance.Customer_Phone_2</td>
                            @*<td>@Model.maintenance.CustomerCity.CustomerCity</td>*@
                            <td>@Model.maintenance.Customer_Adress</td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.maintenance.TechnicalReport, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextAreaFor(model => model.maintenance.TechnicalReport, htmlAttributes: new { @class = "form-control", @style = "height : 200px;" })
                @*@Html.ValidationMessageFor(model => model.maintenance.Device_SerialNumber, "Device Serial Number Is Required", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.maintenance.price, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.maintenance.price, new { htmlAttributes = new { @class = "form-control" } })
                @*@Html.ValidationMessageFor(model => model.maintenance.Device_Model, "Device Model Is Required", new { @class = "text-danger" })*@
            </div>
        </div>




        <div class="form-group">
            @Html.LabelFor(model => model.maintenance.isAccessoriesAvailable, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.CheckBoxFor(model => model.maintenance.isAccessoriesAvailable, htmlAttributes: new { @class = "", @style = "opacity: 1;left:0" })
                @*@Html.CheckBox("Loundry", false)*@
                @*@Html.ValidationMessageFor(model => model.maintenance.Accrssories, "Maintenance Accrssories Is Required", new { @class = "text-danger" })*@
            </div>
        </div>


        @Html.HiddenFor(model => model.maintenance.Id)



        <div class="col-md-12" style="margin-left:40%;margin-top:20px;margin-bottom:50px;">
            <div class="form-group col-md-6">
                <input type="submit" name="Checked_Done" class="btn btn-primary" value="Check Done" id="CheckedDone"
                       formaction="/Maintenance/Checked_Done/@ViewData["mainId"]" formmethod="post" />

                <input type="submit" name="Checked_Done" class="btn btn-danger" value="Save As A Draft" id="SaveDraft"
                       formaction="/Maintenance/saveAsDraft/@ViewData["mainId"]" formmethod="post" />

                <a href="/Maintenance/GetNewMaintenanceRequests" class="btn btn-warning form-group" style="margin-left:1%;">Cancel</a>

            </div>

        </div>

    </div>
    }

    <div class="col-md-12" style="margin-bottom:100px;">
        <div class="col-md-3"></div>
        <div class=" col-md-9" style="overflow:scroll; overflow-x:hidden;  max-height:515px;">
            <div class="tab-content">
                <div class="tab-pane active" id="home" role="tabpanel">
                    <div class="card-block">
                        <p class="text-left text text-blue">Maintennace Activity</p>

                        <div class="profiletimeline">
                            <div class="sl-item">
                                <div class="sl-left"> <img src="../../assets/images/users/3.jpg" alt="user" class="img-circle"> </div>
                                <div class="sl-right">
                                    <div>
                                        <a href="#" class="link">John Doe</a> <span class="sl-date">5 minutes ago</span>
                                        <p class="m-t-10"> The Reuests Approved To Start Maintenance </p>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="profiletimeline">
                            <div class="sl-item">
                                <div class="sl-left"> <img src="../../assets/images/users/3.jpg" alt="user" class="img-circle"> </div>
                                <div class="sl-right">
                                    <div>
                                        <a href="#" class="link">John Doe</a> <span class="sl-date">5 minutes ago</span>
                                        <p class="m-t-10"> The Request Need Acessories  </p>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="profiletimeline">
                            <div class="sl-item">
                                <div class="sl-left"> <img src="../../assets/images/users/3.jpg" alt="user" class="img-circle"> </div>
                                <div class="sl-right">
                                    <div>
                                        <a href="#" class="link">John Doe</a> <span class="sl-date">5 minutes ago</span>
                                        <p class="m-t-10">The Client Reqfused the price </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="profiletimeline">
                            <div class="sl-item">
                                <div class="sl-left"> <img src="../../assets/images/users/3.jpg" alt="user" class="img-circle"> </div>
                                <div class="sl-right">
                                    <div>
                                        <a href="#" class="link">John Doe</a> <span class="sl-date">5 minutes ago</span>
                                        <p class="m-t-10"> The Devices Fixed </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <hr>
                <div class="form-group">
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.maintenance.Accrssories, new { htmlAttributes = new { @class = "form-control" } })
                        @*@Html.ValidationMessageFor(model => model.maintenance.Accrssories, "Maintenance Accrssories Is Required", new { @class = "text-danger" })*@
                    </div>
                    <div class="form-group col-md-2" style="margin-top:2px;">
                        <input type="submit" class="btn btn-success" formaction="/Maintenance/Add_Maintenance_Comment/@ViewData["mainId"]" value="Add Comment"
                               formmethod="post" />
                    </div>

                </div>
            </div>
        </div>
    </div>


</div>